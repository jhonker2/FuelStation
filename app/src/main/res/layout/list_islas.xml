<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textCaja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="78dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/imageView4"
        android:layout_toRightOf="@+id/imageView4"
        android:text="Caja"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textpunto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textCaja"
        android:layout_alignStart="@+id/textCaja"
        android:layout_below="@+id/textCaja"
        android:paddingRight="20dp"
        android:text="TextView"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textCodigoIsla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:text="TextView"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_alignBaseline="@+id/textpunto"
        android:layout_alignBottom="@+id/textpunto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textEstacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textpunto"
        android:layout_alignStart="@+id/textpunto"
        android:layout_below="@+id/textpunto"
        android:text="TextView"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textCodigoIsla"
        android:layout_toRightOf="@+id/textCodigoIsla"
        app:srcCompat="@drawable/isla" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textCaja"
        android:layout_alignEnd="@+id/textView20"
        android:layout_alignLeft="@+id/textView20"
        android:layout_alignRight="@+id/textView20"
        android:layout_alignStart="@+id/textView20"
        android:layout_alignTop="@+id/textCaja"
        android:text="Caja:"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView21"
        android:layout_alignStart="@+id/textView21"
        android:layout_below="@+id/textView16"
        android:text="Punto:"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textEstacion"
        android:layout_alignBottom="@+id/textEstacion"
        android:layout_toLeftOf="@+id/textpunto"
        android:layout_toStartOf="@+id/textpunto"
        android:text="EstaciÃ³n:"
        android:textSize="16sp" />
</RelativeLayout>