<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/txt_cedula"
        android:layout_width="515dp"
        android:layout_height="wrap_content"
        android:hint="Ingrese la Cedula / RUC del cliente"
        android:imeOptions="actionSearch"
        android:padding="20dp"
        android:inputType="number"
        android:singleLine="true"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CODIGO:"
        android:layout_below="@+id/txt_cedula"
        android:layout_alignRight="@+id/ckfiltro"
        android:layout_alignEnd="@+id/ckfiltro" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView13"
        android:layout_alignStart="@+id/textView13"
        android:layout_below="@+id/textView13"
        android:layout_marginTop="5dp"
        android:text="CLIENTE:" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="5dp"
        android:text="DIRECION:" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="5dp"
        android:text="TELEFONO:" />

    <TextView
        android:id="@+id/txt_telefono"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_alignBaseline="@+id/textView9"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignLeft="@+id/txt_direccion"
        android:layout_alignStart="@+id/txt_direccion" />

    <TextView
        android:id="@+id/txt_direccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_above="@+id/textView9"
        android:layout_alignLeft="@+id/txt_cliente"
        android:layout_alignStart="@+id/txt_cliente" />

    <TextView
        android:id="@+id/txt_cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_above="@+id/textView8"
        android:layout_alignLeft="@+id/txt_codigo"
        android:layout_alignStart="@+id/txt_codigo" />

    <TextView
        android:id="@+id/txt_codigo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/txt_cedula"
        android:layout_toRightOf="@+id/textView9"
        android:layout_toEndOf="@+id/textView9"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="37dp"
        android:background="@color/colorAccent"
        android:orientation="horizontal"></LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="PRODUCTO"
        android:textSize="20sp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANTIDAD"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignRight="@+id/txt_telefono"
        android:layout_alignEnd="@+id/txt_telefono" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_alignBottom="@+id/textView10"
        android:layout_marginEnd="79dp"
        android:layout_marginRight="39dp"
        android:layout_toLeftOf="@+id/textView12"
        android:layout_toStartOf="@+id/textView12"
        android:text="PVP"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="53dp"
        android:layout_marginRight="53dp"
        android:text="TOTAL"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="18dp"
        android:background="@color/colorAccent"
        android:orientation="horizontal"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></LinearLayout>

    <TextView
        android:id="@+id/tproducto"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="42dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/tcantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tproducto"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:text="TextView"
        android:layout_alignRight="@+id/textView10"
        android:layout_alignEnd="@+id/textView10" />

    <TextView
        android:id="@+id/tpvp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tcantidad"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11"
        android:text="TextView" />

    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView12"
        android:layout_alignStart="@+id/textView12"
        android:layout_alignTop="@+id/tpvp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tpvp"
        android:layout_alignStart="@+id/tpvp"
        android:layout_below="@+id/tpvp"
        android:layout_marginTop="66dp"
        android:text="SUBTOTAL:" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView17"
        android:layout_alignRight="@+id/textView17"
        android:layout_below="@+id/textView17"
        android:layout_marginTop="15dp"
        android:text="IVA:" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView18"
        android:layout_alignRight="@+id/textView18"
        android:layout_below="@+id/textView18"
        android:layout_marginTop="13dp"
        android:text="TOTAL A PAGAR:" />

    <TextView
        android:id="@+id/tsubtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/total"
        android:layout_alignStart="@+id/total"
        android:layout_alignTop="@+id/textView17"
        android:text="TextView" />

    <TextView
        android:id="@+id/tiva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tsubtotal"
        android:layout_alignRight="@+id/tsubtotal"
        android:layout_alignTop="@+id/textView18"
        android:text="TextView" />

    <TextView
        android:id="@+id/ttotalp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_above="@+id/buttonVenta"
        android:layout_alignLeft="@+id/tiva"
        android:layout_alignStart="@+id/tiva" />

    <Button
        android:id="@+id/buttonVenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView19"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="81dp"
        android:text="Guardar"
        android:textColor="@android:color/white"
        app:backgroundTint="@color/colorPrimary"
        android:drawableLeft="@drawable/gas_station"/>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="5dp"
        android:text="CEDULA:" />

    <TextView
        android:id="@+id/t_cedu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txt_codigo"
        android:layout_alignLeft="@+id/txt_cliente"
        android:layout_alignRight="@+id/txt_codigo"
        android:layout_alignStart="@+id/txt_cliente"
        android:layout_alignTop="@+id/textView13" />


</RelativeLayout>